# keda_app (example)
APP_BASE_URL=http://localhost:8080
APP_SESSION_SECRET=change-me

# Config/Ops toggles
APP_CORS_MODE=secure
APP_ERROR_DETAIL=0

# AuthZ boundary toggles (secure defaults)
APP_AUTHZ_ENFORCE_TENANT=1
APP_AUTHZ_ENFORCE_OWNER=1

# OIDC (Keycloak) - enable only when using `--profile oidc`
OIDC_ENABLED=0
OIDC_CLIENT_ID=keda-app
OIDC_ISSUER_PUBLIC=http://localhost:8081/realms/keda
OIDC_ISSUER_INTERNAL=http://keycloak:8080/realms/keda

